<% include ../partials/header %>


<div class="row">
    <h1>Add New Comment to <%= neighborhood.name %></h1>
    <div>
        <form action="/neighborhoods/<%= neighborhood._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment Text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/neighborhoods">Back to Neighborhoods</a>
    </div>
</div>


