<% include ../partials/header %>


<div class="row">
    <h1>Edit Comment</h1>
    <div>
        <form action="/neighborhoods/<%= neighborhood_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/neighborhoods">Back to Neighborhoods</a>
    </div>
</div>


<% include ../partials/footer %>